@model IEnumerable<Principal.Models.Assignment>

@{
    ViewBag.Title = "Lista de Asignaciones";
    Layout = "~/Views/Shared/_Intern.cshtml";
    ViewBag.Controller = "Home";
    ViewBag.Action = "Extern";
}

<div>
    <a href="@Url.Action("NewAssign", "Assign")">Nueva Asignación</a>

    @if (TempData["success"] != null)
    {
        <h5>@TempData["success"]</h5>
    }

    @if (TempData["error"] != null)
    {
        <h5>@TempData["error"]</h5>
    }

    @if (@Model.Count() > 0)
    {
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Herramienta</th>
                    <th>Trabajador</th>
                    <th>Entrega</th>
                    <th>Retiro</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.id</td>
                        <td>@a.Tool.name</td>
                        <td>@a.Worker.name @a.Worker.lastnames</td>
                        <td>@a.delivery.ToString("dd/MM/yyyy")</td>
                        <td>@a.retirement.ToString("dd/MM/yyyy")</td>
                        <td>@a.description</td>
                        <td><a href="@Url.Action("AssignUpdate", "Assign", new { id = a.id })">Actualizar</a></td>
                        <td><a href="@Url.Action("AssignDelete", "Assign", new { id = a.id })">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No Se Encontraron Asignaciones</p>
    }
</div>
