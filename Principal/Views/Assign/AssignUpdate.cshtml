@model Principal.Models.Assignment

@{
    ViewBag.Title = "Actualizar Asignación";
    Layout = "~/Views/Shared/_Intern.cshtml";
    ViewBag.Controller = "Home";
    ViewBag.Action = "Extern";
}

<div>
    @using (Html.BeginForm("AssignUpdate", "Assign", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            <label>Id</label>
            <div>
                @Model.id
            </div>
        </div>

        <div>
            <label>Herramienta</label>
            <div>
                @Html.DropDownList("tool_id", null, "Selecciona", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tool_id, "", new { @class = "form-control" })
            </div>
        </div>

        <div>
            <label>Trabajador</label>
            <div>
                @Html.DropDownList("worker_id", null, "Selecciona", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.worker_id, "", new { @class = "form-control" })
            </div>
        </div>

        <div>
            <label>Entrega</label>
            <div>
                @Model.delivery.ToString("yyyy-MM-dd")
            </div>
            <div style="display: none;">
                @Html.TextBoxFor(model => model.delivery)
            </div>
        </div>

        <div>
            <label>Retiro</label>
            <div>
                @Model.delivery.ToString("yyyy-MM-dd")
            </div>
            <div style="display: none;">
                @Html.TextBoxFor(model => model.retirement)
            </div>
        </div>

        <div>
            <label>Descripción</label>
            <div>
                @Html.TextBoxFor(model => model.description)
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "form-control" })
            </div>
        </div>

        <button>Actualizar</button>
        <a href="@Url.Action("AssignList", "Assign")">Atras</a>
    }
</div>