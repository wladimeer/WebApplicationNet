@model Principal.Models.Worker

@{
    ViewBag.Title = "Actualizar Trabajador";
    Layout = "~/Views/Shared/_Intern.cshtml";
    ViewBag.Controller = "Home";
    ViewBag.Action = "Extern";
}

<div>
    @using (Html.BeginForm("WorkerUpdate", "Worker", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row card m-1">
            <div class="col-md">
                <div class="row">
                    <div class="col-12 my-3">
                        <div class="row justify-content-center align-items-center">
                            <label for="id" style="cursor: pointer;">Identificador</label>

                            <div class="col-12">
                                <input readonly value="@Model.id" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 my-3">
                        <div class="row justify-content-center align-items-center">
                            <label for="name" style="cursor: pointer;">Nombre</label>

                            <div class="col-12">
                                @Html.TextBoxFor(model => model.name, htmlAttributes: new {
                                    @class = "form-control"
                                })
                            </div>
                        </div>

                        <div class="">
                            <div class="mt-1">
                                @Html.ValidationMessageFor(model => model.name, "", new {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                    </div>

                    <div class="col-12 my-3">
                        <div class="row justify-content-center align-items-center">
                            <label for="lastnames" style="cursor: pointer;">Apellidos</label>

                            <div class="col-12">
                                @Html.TextBoxFor(model => model.lastnames, htmlAttributes: new {
                                    @class = "form-control"
                                })
                            </div>
                        </div>

                        <div class="">
                            <div class="mt-1">
                                @Html.ValidationMessageFor(model => model.lastnames, "", new {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                    </div>

                    <div class="col-12 my-3">
                        <div class="row justify-content-center align-items-center">
                            <label for="email" style="cursor: pointer;">Correo</label>

                            <div class="col-12">
                                @Html.TextBoxFor(model => model.email, htmlAttributes: new {
                                    @class = "form-control"
                                })
                            </div>
                        </div>

                        <div class="">
                            <div class="mt-1">
                                @Html.ValidationMessageFor(model => model.email, "", new {
                                    @class = "text-danger"
                                })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="my-3 d-flex justify-content-between">
                    <button class="btn btn-outline-success col-5">Actualizar</button>
                    <a class="btn btn-outline-danger col-5" href="@Url.Action("WorkerList", "Worker")">Atrás</a>
                </div>
            </div>
        </div>
    }
</div>