@model IEnumerable<Principal.Models.Worker>

@{
    ViewBag.Title = "Lista de Trabajadores";
    Layout = "~/Views/Shared/_Intern.cshtml";
    ViewBag.Controller = "Home";
    ViewBag.Action = "Extern";
}

<div>
    <a href="@Url.Action("NewWorker", "Worker")">Nuevo Trabajador</a>

    @if (TempData["success"] != null)
    {
        <h5>@TempData["success"]</h5>
    }

    @if (TempData["error"] != null)
    {
        <h5>@TempData["error"]</h5>
    }

    @if (Model.Count() > 0)
    {
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var w in Model)
                {
                    <tr>
                        <td>@w.id</td>
                        <td>@w.name</td>
                        <td>@w.lastnames</td>
                        <td>@w.email</td>
                        <td><a href="@Url.Action("WorkerUpdate", "Worker", new { id = w.id })">Actualizar</a></td>
                        <td><a href="@Url.Action("WorkerDelete", "Worker", new { id = w.id })">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No Se Encontraron Trabajadores</p>
    }
</div>